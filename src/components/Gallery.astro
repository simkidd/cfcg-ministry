---
import { galleryImages } from "../data/gallery.data";
import ImageGallery from "./ImageGallery";
---

<div class="gallery padding--top padding--bottom bg-light" id="gallery">
  <div class="container">
    <div class="section__header text-center">
      <h2>Gallery</h2>
    </div>

    <div class="section__wrapper">
      <ImageGallery client:load images={galleryImages.slice(0, 3)} />
      <div class="text-center mt-5">
        <a href="/gallery" class="default-btn move-right"
          ><span>View All</span></a
        >
      </div>
    </div>
  </div>
</div>


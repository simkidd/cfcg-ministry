---
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import Logo from "../assets/images/cfcgm-logo.png";
import HeaderLink from "./HeaderLink.astro";

interface Menu {
  name: string;
  href: string;
}

const navlist: Menu[] = [
  { name: "Home", href: "/" },
  { name: "Events", href: "/#events" },
  { name: "Gallery", href: "/gallery" },
  { name: "Sermons", href: "/sermons" },
  { name: "Contact Us", href: "/#contact-us" },
];
---

<header class="header">
  <div class="navbar-expand-xl">
    <div class="collapse navbar-collapse" id="menubar2">
      <div class="header__top w-100">
        <div class="container">
          <div class="header__top-area">
            <div class="header__top-left col-4">
              <ul>
                <li>
                  <a href="tel:+2348125884223" class="f-15">
                    <Icon size={18} name="mdi:phone" class="me-2" />
                    +234 812 588 4223
                  </a>
                </li>
                <li>
                  <a
                    href="mailto:campaignforchristglobal@gmail.com"
                    class="f-15"
                  >
                    <Icon size={18} name="mdi:envelope" class="me-2" />
                    campaignforchristglobal@gmail.com
                  </a>
                </li>
              </ul>
            </div>
            <div class="header__top-center col-4">
              <div
                class="header__top-logo d-none d-md-flex justify-content-center"
              >
                <a href="/">
                  <Image src={Logo} alt="logo" width={100} height={100} />
                </a>
              </div>
            </div>
            <div class="header__top-right col-4">
              <div class="header__top-socialsearch">
                <div class="header__top-social ms-md-auto">
                  <ul class="gap-2">
                    <li>
                      <a
                        href="https://facebook.com/campaign4Jesu"
                        target="_blank"
                      >
                        <Icon size={18} name="ri:facebook-fill" class="me-2" />
                      </a>
                    </li>
                    <li>
                      <a href="#">
                        <Icon size={18} name="ri:twitter-x-fill" class="me-2" />
                      </a>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="header__bottom">
      <div class="container">
        <div class="header__mainmenu navbar navbar-expand-xl navbar-light">
          <div class="header__logo">
            <div
              class="logo-wrap bg-white d-flex align-items-center justify-content-center"
            >
              <a href="/" class="d-none d-xl-block">
                <Image src={Logo} alt="logo" height={40} />
              </a>
              <a href="/" class="d-xl-none">
                <Image src={Logo} alt="logo" height={40} />
              </a>
            </div>
          </div>
          <div class="header__bar">
            <button
              class="navbar-toggler text-white border-0"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#menubar2"
              aria-controls="menubar2"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <Icon name="heroicons:information-circle" size={28} />
            </button>
            <button
              class="navbar-toggler text-white border-white"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#menubar"
              aria-controls="menubar"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <Icon name="heroicons:bars-3-bottom-left-16-solid" size={28} />
            </button>
          </div>
          <div class="header__menu navbar-expand-xl">
            <div class="collapse navbar-collapse" id="menubar">
              <ul>
                {
                  navlist.map(({ name, href }) => (
                    <li>
                      <HeaderLink href={href}>{name}</HeaderLink>
                    </li>
                  ))
                }
              </ul>
              <a href="/donation-causes" class="default-btn">
                <span>
                  Donate Now
                  <Icon name="mdi:heart" />
                </span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<style lang="scss">
  .f-15 {
    font-size: 15px !important;
  }

  .header__bottom{
    a{
      @media (max-width: 768px) {
        color: #fff !important;
      }
    }
    .active {
      @media screen and (min-width: 768px) {
        text-decoration: none !important;
        color: #0c5bcd;
      }
    }

  }
  .logo-wrap {
    width: 50px;
    height: 50px;
    border-radius: 50%;
  }
</style>

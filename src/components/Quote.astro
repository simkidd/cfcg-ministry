---
import { Icon } from "astro-icon/components";
import { bibleVerses } from "../data/verses.data";
import { getImage } from "astro:assets";
import Bg3 from "../assets/images/bg/spirituality-religion-hands-folded-prayer-holy-bible-church-concept-faith.jpg"

const optBgImage = await getImage({ src: Bg3 });
---

<div
  class="qoute padding--top padding--bottom bg-img"
  style=`background: url('${optBgImage.src}') rgba(0, 0, 0, .75);`
>
  <div class="container">
    <div class="qoute__slider swiper overflow-hidden">
      <div class="swiper-wrapper">
        {
          bibleVerses.map(({ book, chapter, verse, text }) => (
            <div class="swiper-slide">
              <div class="qoute__item">
                <div class="qoute__inner align-items-center">
                  <div class="qoute__thumb">
                    <h4>Bible</h4>
                    <span>Verses</span>
                    <Icon name="mdi:format-quote-open" class="text-white " />
                  </div>
                  <div class="qoute__content">
                    <blockquote class="qoute__content-blockquote">
                      <p>{text}</p>
                      <h4>
                        {book} {chapter} : {verse}
                      </h4>
                    </blockquote>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>

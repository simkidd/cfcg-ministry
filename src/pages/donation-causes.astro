---
import PageHeader from "../components/PageHeader.astro";
import SocialLinks from "../components/SocialLinks.astro";
import MainLayout from "../layouts/MainLayout.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../utils/constants";
import DonateImg from "../assets/images/hand-holding-coin-bank.jpg";
import { Image } from "astro:assets";

const pageTitle = "Donation Causes";
---

<MainLayout
  title={`${pageTitle} | ${SITE_TITLE}`}
  description={SITE_DESCRIPTION}
>
  <PageHeader title={pageTitle} />
  <div class="donation-page py-5">
    <div class="container">
      <div class="donation-content">
        <h2 class="fw-bold text-secondary text-center m-0">
          Support The Mission
        </h2>
        <div class="swiper">
          <div class="swiper-wrapper">
            <div class="swiper-slide">
              <div class="donate">
                <div class="img-wrapper">
                  <Image src={DonateImg} alt="donate-imd" class="branch-img" />
                </div>
                <div class="donate-content py-4">
                  <h3 class="donate-heading">
                    Your Generousity is Making a Difference
                  </h3>
                  <div class="donate-text">
                    <p>
                      We are happy to get any support from members of this
                      assembly and the community at large!
                    </p><p>
                      Thank you so much for staying with us, and for all your
                      help, Donations
                    </p>
                  </div>
                  <div class="price-donate">
                    <a href="#" class="default-btn move-right"
                      ><span>Donate</span></a
                    >
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <SocialLinks />
</MainLayout>

<style lang="scss">
  .donation-page {
    background: #f8f9fa;
  }
  .donate {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(0, 1fr));
    grid-auto-rows: auto;
    grid-auto-flow: dense;
    margin-block: 2rem;
    gap: 2rem;
    background: #fff;
    @media (max-width: 768px) {
      grid-template-columns: repeat(auto-fit, minmax(100%, 1fr));
    }
    .donation-content {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      .img-wrapper {
        overflow: hidden;
        width: 100%;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }
      }
      .donate-content {
        width: 100%;
        display: flex;
        justify-content: center;
        gap: 1rem;
        background: #c4c4c4;
        .donate-heading {;
        }
        .donate-text {
        }

      }
    }
  }
</style>
